{
    "name": "typescript-template",
    "version": "1.0.0",
    "description": "Typescript template project",
    "main": "src/index.ts",
    "repository": "https://github.com/grezxune/Typescript-Template",
    "author": "grezxune <tomtrezb2003@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "npx tsc -w",
        "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --fix",
        "check-types": "tsc",
        "start": "yarn && webpack --watch"
    },
    "dependencies": {
        "express": "^4.17.1",
        "graphql": "^14.5.8",
        "graphql-tag": "^2.10.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.0",
        "@babel/core": "^7.7.2",
        "@babel/node": "^7.7.0",
        "@babel/preset-env": "^7.7.1",
        "@babel/preset-typescript": "^7.7.2",
        "@typescript-eslint/eslint-plugin": "^2.6.1",
        "@typescript-eslint/parser": "^2.6.1",
        "babel-loader": "^8.0.6",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2",
        "nodemon-webpack-plugin": "^4.1.1",
        "prettier": "^1.18.2",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.2",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-node-externals": "^1.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint src/**.{js,ts,tsx} --fix",
            "git add"
        ]
    }
}
